---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout 
  title={frontmatter.title} 
  description={frontmatter.description}
  image={frontmatter.image}
>
  <article class="project-page">
    <div class="container">
      <!-- Project Header -->
      <header class="project-header">
        <a href="/projects" class="back-link">← Back to Projects</a>
        
        <h1 class="project-title">{frontmatter.title}</h1>
        
        <p class="project-description">{frontmatter.description}</p>
        
        <!-- Links (if available) -->
        {(frontmatter.demoURL || frontmatter.repoURL) && (
          <div class="project-links">
            {frontmatter.demoURL && (
              <a href={frontmatter.demoURL} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
                View Demo →
              </a>
            )}
            {frontmatter.repoURL && (
              <a href={frontmatter.repoURL} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
                View Repository
              </a>
            )}
          </div>
        )}
      </header>
      
      <!-- Featured Image -->
      {frontmatter.image && (
        <div class="project-image">
          <img src={frontmatter.image} alt={frontmatter.title} />
        </div>
      )}
      
      <!-- Project Content -->
      <div class="project-content">
        <slot />
      </div>
      
      <!-- Footer Navigation -->
      <footer class="project-footer">
        <a href="/projects" class="back-link-footer">← Back to All Projects</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .project-page {
    padding: var(--spacing-3xl) 0;
  }
  
  .project-header {
    max-width: 800px;
    margin: 0 auto var(--spacing-3xl);
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: var(--spacing-lg);
    transition: var(--transition-fast);
  }
  
  .back-link:hover {
    transform: translateX(-4px);
  }
  
  .project-title {
    font-size: var(--text-5xl);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }
  
  .project-description {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
  }
  
  .project-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: 8px;
    font-weight: 600;
    font-size: var(--text-base);
    transition: all var(--transition-base);
  }
  
  .btn-primary {
    background: var(--color-accent);
    color: white;
    box-shadow: var(--shadow-md);
  }
  
  .btn-primary:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .btn-secondary {
    background: transparent;
    color: var(--color-accent);
    border: 2px solid var(--color-accent);
  }
  
  .btn-secondary:hover {
    background: var(--color-accent);
    color: white;
    transform: translateY(-2px);
  }
  
  .project-image {
    margin: 0 auto var(--spacing-3xl);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }
  
  .project-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .project-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  /* Style the markdown content */
  .project-content :global(h1) {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-md);
  }
  
  .project-content :global(h2) {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
  }
  
  .project-content :global(h3) {
    font-size: var(--text-2xl);
    font-weight: 600;
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    color: var(--color-accent);
  }
  
  .project-content :global(h4) {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
  }
  
  .project-content :global(p) {
    font-size: var(--text-lg);
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
    color: var(--color-text-muted);
  }
  
  .project-content :global(ul),
  .project-content :global(ol) {
    margin: var(--spacing-md) 0;
    padding-left: var(--spacing-xl);
  }
  
  .project-content :global(li) {
    margin-bottom: var(--spacing-xs);
    line-height: 1.6;
    color: var(--color-text-muted);
  }
  
  .project-content :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }
  
  .project-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
  }
  
  .project-content :global(code) {
    background: var(--color-bg-secondary);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: 0.9em;
  }
  
  .project-content :global(pre) {
    background: var(--color-bg-secondary);
    padding: var(--spacing-md);
    border-radius: 8px;
    overflow-x: auto;
    margin: var(--spacing-md) 0;
  }
  
  .project-content :global(blockquote) {
    border-left: 4px solid var(--color-accent);
    padding-left: var(--spacing-md);
    margin: var(--spacing-lg) 0;
    font-style: italic;
    color: var(--color-text-muted);
  }
  
  .project-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: var(--spacing-lg) 0;
  }
  
  .project-footer {
    max-width: 800px;
    margin: var(--spacing-3xl) auto 0;
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }
  
  .back-link-footer {
    display: inline-flex;
    align-items: center;
    color: var(--color-accent);
    font-weight: 600;
    transition: var(--transition-fast);
  }
  
  .back-link-footer:hover {
    transform: translateX(-4px);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .project-title {
      font-size: var(--text-3xl);
    }
    
    .project-description {
      font-size: var(--text-lg);
    }
    
    .project-links {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>