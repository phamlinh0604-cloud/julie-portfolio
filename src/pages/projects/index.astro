---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { getCollection } from 'astro:content';


// Get all projects and sort by order
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout 
  title="Projects" 
  description="Explore my fintech product portfolio - from digital lending to BNPL solutions"
>
  <div class="projects-page">
    <div class="container">
      <!-- Page Header -->
      <header class="page-header">
        <h1 class="page-title">My Projects</h1>
        <p class="page-description">
          A collection of fintech products I've built to empower underserved communities and drive financial inclusion. Each project represents a journey from user research to market launch, with measurable impact on people's lives.
        </p>
      </header>
      
      <!-- Filter/Category Section (Optional - for future use) -->
      <!-- <div class="filters">
        <button class="filter-btn active">All</button>
        <button class="filter-btn">Fintech</button>
        <button class="filter-btn">Product Management</button>
      </div> -->
      
      <!-- Projects Grid -->
      <div class="projects-grid">
        {sortedProjects.map(project => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            image={project.data.image}
            url={`/projects/${project.slug}`}
          />
        ))}
      </div>
      
      <!-- Call to Action -->
      <div class="cta-section">
        <h2 class="cta-title">Interested in Learning More?</h2>
        <p class="cta-text">
          I'm always happy to discuss these projects in detail and share insights from my product management journey.
        </p>
        <div class="cta-buttons">
          <a href="/about" class="btn btn-primary">About Me</a>
          <a href="https://www.linkedin.com/in/linh-pham-khanh-vietnam/" target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
            Connect on LinkedIn
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .projects-page {
    padding: var(--spacing-3xl) 0;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .page-title {
    font-size: var(--text-5xl);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-hover));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .page-description {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    line-height: 1.6;
  }
  
  /* Filters (for future use) */
  .filters {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    margin-bottom: var(--spacing-2xl);
    flex-wrap: wrap;
  }
  
  .filter-btn {
    padding: var(--spacing-xs) var(--spacing-lg);
    border: 2px solid var(--color-border);
    background: transparent;
    color: var(--color-text);
    border-radius: 20px;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .filter-btn:hover,
  .filter-btn.active {
    border-color: var(--color-accent);
    background: var(--color-accent);
    color: white;
  }
  
  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-3xl);
  }
  
  /* CTA Section */
  .cta-section {
    background: var(--color-bg-secondary);
    border-radius: 16px;
    padding: var(--spacing-3xl);
    text-align: center;
    margin-top: var(--spacing-3xl);
  }
  
  .cta-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
  }
  
  .cta-text {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: 8px;
    font-weight: 600;
    font-size: var(--text-base);
    transition: all var(--transition-base);
  }
  
  .btn-primary {
    background: var(--color-accent);
    color: white;
    box-shadow: var(--shadow-md);
  }
  
  .btn-primary:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .btn-secondary {
    background: transparent;
    color: var(--color-accent);
    border: 2px solid var(--color-accent);
  }
  
  .btn-secondary:hover {
    background: var(--color-accent);
    color: white;
    transform: translateY(-2px);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .cta-buttons {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
    }
  }
</style>